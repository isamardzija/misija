---
import InstagramIcon from "../images/icons/instagram.png";
import FacebookIcon from "../images/icons/facebook.png";
import TikTokIcon from "../images/icons/tiktok.webp";
---

<footer>
  <nav>
    <ul>
      <li><a href="/onama">O nama</a></li>
      <li>
        <a href="/projekti-i-aktivnosti">Projekti i aktivnosti</a>
      </li>
      <li><a href="/novosti">Novosti</a></li>
      <li><a href="/kontakt">Kontakt</a></li>
      <li class="social">
        <a href="https://www.facebook.com/udrugamisija/"
          ><img src={FacebookIcon} alt="Facebook Logo" /></a
        ><a href="https://www.instagram.com/udrugamisija/"
          ><img src={InstagramIcon} alt="Instagram logo" /></a
        >
        <a href="https://www.tiktok.com/@udrugamisija"
          ><img src={TikTokIcon} alt="Instagram logo" /></a
        >
      </li>
    </ul>
  </nav>
</footer>

<style>
  footer {
    padding: 1rem;
  }
  ul {
    list-style-type: none;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    gap: var(--gap-200);
  }
  img {
    height: 24px;
    aspect-ratio: 1/1;
  }
  a {
    text-decoration: none;
    font-weight: var(--fontweight-600);
    text-transform: uppercase;
    color: var(--color-neutral-900);
  }
  li a:hover {
    border-bottom: 2px solid var(--color-highlight);
  }
  .social {
    display: flex;
    gap: var(--gap-200);
  }
</style>
