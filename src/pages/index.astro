---
// Layouts
const title = "Početna";
import MainLayout from "../layouts/MainLayout.astro";
// Components
import Hero from "../components/Hero.astro";
import ImageList from "../components/ImageList.astro";
import Stats from "../components/Stats.astro";
import CallToAction from "../components/CallToAction.astro";
// Images
import imageClanovi from "../images/photos/clanovi-udruge-misija-dan-opcine.jpg"
import imageStariSportovi from "../images/photos/natjecanje-u-starim-sportovima.jpg"
import imagePredavanje from "../images/photos/predavanje-mjere-aktivne-politike-zaposljavanja.jpg"
import imageKopackiRit from "../images/photos/upoznajmo-lijepu-nasu-kopacki-rit.jpg"
---

<MainLayout title={title}>
  <Hero
    title={"Mi smo MiSiJa."}
    subtitle={"Ekipa za zabavu, organizaciju, pomaganje, edukaciju i još puno toga."}
  />
  <ImageList
  list1={{image: imageStariSportovi, alt: "Natjecanje u starim sportovima", text: "Organiziramo zanimljive događaje"}}
  list2={{image: imageKopackiRit, alt: "Izlet u Kopački rit", text: "Putujemo Lijepom Našom"}}
  list3={{image: imageClanovi, alt: "Članovi udruge MiSiJa na Danima općine Sikirevci", text: "Stječemo nova prijateljstva"}}
  list4={{image: imagePredavanje, alt: "Predavanje Mjere aktivne politike zapošljavanja", text: "Učimo i razvijamo svoje vještine"}}

   />
  <Stats 
  stat1={{number: "30+", text: "članova"}}
  stat2={{number: "20+", text: "organiziranih događaja"}}
  stat3={{number: "8", text: "posjećenih lokacija"}}
  stat4={{number: "100+", text: "sati dobrih dijela"}}
   />

  <CallToAction text={"Želiš postati dio naše priče?"} />

</MainLayout>

<style>
  ul {
    max-width: 100%;
    list-style-type: none;
  }
  li {
    max-width: 100%;
  }
</style>